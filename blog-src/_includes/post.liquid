---
layout: base.liquid
---
<article class="blog-post">
  <h1>{{ title }}</h1>
  <div class="post-meta">
    <time datetime="{{ page.date | date: "%Y-%m-%d" }}">{{ page.date | date: "%B %d, %Y" }}</time>
    {% if author %}
    <span class="mx-2">·</span>
    <span>{{ author }}</span>
    {% endif %}
  </div>
  {{ content }}
  <nav class="mt-12 pt-8 border-t border-gray-200">
    <a class="text-blue-800 hover:text-blue-600 font-medium transition-colors" href="/blog/">← Back to all posts</a>
  </nav>
</article>