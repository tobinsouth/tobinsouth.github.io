---
layout: base.liquid
---
<article class="blog-post">
  <style>
    .blog-post {
      animation: fadeIn 0.5s ease-in;
    }
    
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .post-header {
      margin-bottom: 3rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid var(--border-color);
    }
    
    .post-header h1 {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: var(--text-primary);
      line-height: 1.2;
      letter-spacing: -0.03em;
    }
    
    .post-meta {
      color: var(--text-tertiary);
      font-size: 0.9375rem;
      font-weight: 400;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .post-meta time {
      color: var(--text-secondary);
    }
    
    .post-content {
      max-width: 100%;
      font-size: 1.0625rem;
      line-height: 1.85;
    }
    
    /* Headings */
    .post-content h2 {
      font-size: 1.875rem;
      font-weight: 600;
      margin-top: 3rem;
      margin-bottom: 1.25rem;
      color: var(--text-primary);
      letter-spacing: -0.02em;
    }
    
    .post-content h3 {
      font-size: 1.5rem;
      font-weight: 600;
      margin-top: 2.5rem;
      margin-bottom: 1rem;
      color: var(--text-primary);
      letter-spacing: -0.01em;
    }
    
    .post-content h4 {
      font-size: 1.25rem;
      font-weight: 600;
      margin-top: 2rem;
      margin-bottom: 0.75rem;
      color: var(--text-primary);
    }
    
    /* Paragraphs and text */
    .post-content p {
      margin-bottom: 1.75rem;
      color: var(--text-secondary);
      font-weight: 400;
    }
    
    .post-content strong {
      font-weight: 600;
      color: var(--text-primary);
    }
    
    .post-content em {
      font-style: italic;
      color: var(--text-secondary);
    }
    
    /* Lists */
    .post-content ul,
    .post-content ol {
      margin-bottom: 1.75rem;
      padding-left: 1.75rem;
      color: var(--text-secondary);
    }
    
    .post-content li {
      margin-bottom: 0.5rem;
      line-height: 1.85;
    }
    
    .post-content li::marker {
      color: var(--accent-primary);
    }
    
    /* Links */
    .post-content a {
      color: var(--accent-primary);
      text-decoration: none;
      font-weight: 500;
      border-bottom: 1px solid transparent;
      transition: all 0.2s ease;
    }
    
    .post-content a:hover {
      color: var(--accent-tertiary);
      border-bottom-color: var(--accent-tertiary);
    }
    
    /* Code */
    .post-content code {
      background-color: var(--code-bg);
      color: var(--code-text);
      padding: 0.125rem 0.375rem;
      border-radius: 0.375rem;
      font-size: 0.875em;
      font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace;
      font-weight: 500;
    }
    
    .post-content pre {
      background-color: var(--pre-bg);
      color: var(--pre-text);
      padding: 1.5rem;
      border-radius: 0.75rem;
      overflow-x: auto;
      margin-bottom: 1.75rem;
      font-size: 0.9375rem;
      line-height: 1.6;
      border: 1px solid var(--border-color);
    }
    
    .post-content pre code {
      background: none;
      color: var(--pre-text);
      padding: 0;
      font-size: inherit;
      font-weight: 400;
    }
    
    /* Blockquotes */
    .post-content blockquote {
      border-left: 3px solid var(--accent-primary);
      padding-left: 1.5rem;
      margin: 2rem 0;
      font-style: italic;
      color: var(--text-secondary);
      font-size: 1.0625rem;
    }
    
    .post-content blockquote p {
      margin-bottom: 0;
    }
    
    /* Tables */
    .post-content table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 1.75rem;
      font-size: 0.9375rem;
    }
    
    .post-content th,
    .post-content td {
      padding: 0.75rem;
      text-align: left;
      border-bottom: 1px solid var(--border-color);
    }
    
    .post-content th {
      font-weight: 600;
      color: var(--text-primary);
      background-color: var(--bg-tertiary);
    }
    
    .post-content td {
      color: var(--text-secondary);
    }
    
    /* Images */
    .post-content img {
      max-width: 100%;
      height: auto;
      border-radius: 0.75rem;
      margin: 2rem 0;
      box-shadow: var(--shadow-md);
    }
    
    /* Horizontal rules */
    .post-content hr {
      border: none;
      border-top: 1px solid var(--border-color);
      margin: 3rem 0;
    }
    
    /* Post navigation */
    .post-navigation {
      margin-top: 4rem;
      padding-top: 2rem;
      border-top: 1px solid var(--border-color);
      padding-bottom: 2rem;
    }
    
    .post-navigation a {
      color: var(--accent-primary);
      text-decoration: none;
      font-weight: 500;
      font-size: 0.9375rem;
      display: inline-flex;
      align-items: center;
      gap: 0.375rem;
      transition: all 0.2s ease;
    }
    
    .post-navigation a:hover {
      color: var(--accent-tertiary);
      gap: 0.5rem;
    }
    
    /* Responsive design */
    @media (max-width: 768px) {
      .post-header h1 {
        font-size: 2rem;
      }
      
      .post-content {
        font-size: 1rem;
      }
      
      .post-content h2 {
        font-size: 1.625rem;
        margin-top: 2.5rem;
      }
      
      .post-content h3 {
        font-size: 1.375rem;
        margin-top: 2rem;
      }
      
      .post-content pre {
        padding: 1rem;
        font-size: 0.875rem;
      }
      
      .post-content blockquote {
        padding-left: 1rem;
        font-size: 1rem;
      }
    }
    
    @media (max-width: 480px) {
      .post-header h1 {
        font-size: 1.75rem;
      }
      
      .post-meta {
        font-size: 0.875rem;
      }
      
      .post-content ul,
      .post-content ol {
        padding-left: 1.25rem;
      }
    }
  </style>
  
  <header class="post-header">
    <h1>{{ title }}</h1>
    <div class="post-meta">
      <time datetime="{{ page.date | date: '%Y-%m-%d' }}">
        {{ page.date | date: "%B %d, %Y" }}
      </time>
      {% if author %}
      <span>·</span>
      <span>{{ author }}</span>
      {% endif %}
    </div>
  </header>

  <main class="post-main">
    <div class="post-content">
      {{ content }}
    </div>
  </main>
  
  <nav class="post-navigation">
    <a href="/blog/">← Back to all posts</a>
  </nav>
</article>