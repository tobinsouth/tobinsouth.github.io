---
layout: base.liquid
pagination:
  data: collections.posts
  size: 1000
permalink: "/index.html"
---

<header class="site-header">
  <h1><a href="/blog/">Tobin's Blog</a></h1>
  <p>{{ site.description }}</p>
  <nav class="back-link">
    <a href="/">← Back to main site</a>
  </nav>
</header>

<main class="blog-main">
  {% if collections.posts.size > 0 %}
    <section class="posts-list">
      {% for post in collections.posts %}
        <article class="post-card">
          <a href="{{ post.url }}" class="post-link">
            <header class="post-card-header">
              <h2 class="post-card-title">{{ post.data.title }}</h2>
              <time class="post-card-date" datetime="{{ post.date | date: '%Y-%m-%d' }}">
                {{ post.date | date: "%B %d, %Y" }}
              </time>
            </header>
            {% if post.data.description %}
              <p class="post-card-description">{{ post.data.description }}</p>
            {% endif %}
            <span class="read-more">
              Read article →
            </span>
          </a>
        </article>
      {% endfor %}
    </section>
  {% else %}
    <div class="empty-state">
      <p>No posts yet. Check back soon for new content!</p>
    </div>
  {% endif %}
</main>

<footer>
  <p>
    <a href="/blog/feed.xml">RSS</a>
    <a href="https://github.com/tobinsouth">GitHub</a>
    <a href="https://x.com/tobinsouth">X</a>
  </p>
</footer>

<style>
  .blog-main {
    padding: 0;
    animation: fadeIn 0.5s ease-in;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .posts-list {
    margin-top: 0;
  }
  
  .post-card {
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
  }
  
  .post-card:last-child {
    margin-bottom: 0;
  }
  
  .post-link {
    display: block;
    padding: 2rem;
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .post-link:hover {
    background-color: var(--bg-tertiary);
    border-color: var(--accent-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }
  
  .post-card-header {
    margin-bottom: 0.75rem;
  }
  
  .post-card-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: var(--text-primary);
    line-height: 1.3;
    letter-spacing: -0.01em;
    transition: color 0.2s ease;
  }
  
  .post-link:hover .post-card-title {
    color: var(--accent-primary);
  }
  
  .post-card-date {
    color: var(--text-tertiary);
    font-size: 0.875rem;
    font-weight: 400;
    display: block;
  }
  
  .post-card-description {
    color: var(--text-secondary);
    line-height: 1.7;
    font-size: 1rem;
    margin: 1rem 0;
    font-weight: 400;
  }
  
  .read-more {
    color: var(--accent-primary);
    font-weight: 500;
    font-size: 0.9375rem;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    margin-top: 0.75rem;
    transition: all 0.2s ease;
  }
  
  .post-link:hover .read-more {
    gap: 0.5rem;
    color: var(--accent-tertiary);
  }
  
  /* Empty state */
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background-color: var(--bg-secondary);
    border-radius: 0.75rem;
    border: 1px solid var(--border-color);
  }
  
  .empty-state p {
    color: var(--text-tertiary);
    font-style: italic;
    font-size: 1.0625rem;
    margin: 0;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .post-link {
      padding: 1.5rem;
    }
    
    .post-card-title {
      font-size: 1.375rem;
    }
    
    .post-card-description {
      font-size: 0.9375rem;
    }
    
    .empty-state {
      padding: 3rem 1.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .post-card {
      margin-bottom: 1rem;
    }
    
    .post-link {
      padding: 1.25rem;
    }
    
    .post-card-title {
      font-size: 1.25rem;
    }
    
    .post-card-date {
      font-size: 0.8125rem;
    }
    
    .read-more {
      font-size: 0.875rem;
    }
  }
</style>