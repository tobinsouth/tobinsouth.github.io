---
layout: base.liquid
pagination:
  data: collections.posts
  size: 1000
permalink: "/index.html"
---

<header>
  <h1><a href="/blog/">Tobin's Blog</a></h1>
  <p>{{ site.description }}</p>
  <nav class="back-link">
    <a href="/">← run away</a>
  </nav>
</header>

<main class="blog-main">
  {% if collections.posts.size > 0 %}
    <section class="posts-section">
      {% for post in collections.posts %}
        <article class="post-preview">
          <header class="post-header">
            <h2 class="post-title">
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h2>
            <time class="post-date" datetime="{{ post.date | date: '%Y-%m-%d' }}">
              {{ post.date | date: "%B %d, %Y" }}
            </time>
          </header>
          {% if post.data.description %}
            <p class="post-description">{{ post.data.description }}</p>
          {% endif %}
          <a href="{{ post.url }}" class="read-more">Read more →</a>
        </article>
      {% endfor %}
    </section>
  {% else %}
    <div class="empty-state">
      <p>No posts yet. Check back soon!</p>
    </div>
  {% endif %}
</main>

<footer>
  <p>
    <br>
    <a href="/blog/feed.xml">RSS Feed</a>
    <a href="https://github.com/tobinsouth">GitHub</a>
    <a href="https://x.com/tobinsouth">X</a>
  </p>
</footer>

<style>
  .blog-main { padding: 0; }

  .posts-section { margin-top: 0; }

  .post-preview {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 2.25rem;
    margin-bottom: 1.5rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
    box-shadow: var(--shadow);
  }

  .post-preview:hover {
    transform: translateY(-2px);
    border-color: var(--link);
  }

  .post-preview:last-child { margin-bottom: 0; }

  .post-header { margin-bottom: 0.5rem; }

  .post-title {
    font-size: 1.625rem;
    font-weight: 800;
    margin: 0 0 0.25rem 0;
    line-height: 1.25;
    text-wrap: balance;
  }

  .post-title a {
    color: var(--accent-end);
    text-decoration: none;
  }

  .post-title a:hover { color: var(--link-hover); }

  .post-date {
    color: var(--muted);
    font-size: 0.875rem;
    font-weight: 600;
    display: block;
  }

  .post-description {
    color: var(--muted-2);
    line-height: 1.75;
    font-size: 1rem;
    margin: 1rem 0 0.5rem 0;
  }

  .read-more {
    color: var(--link);
    text-decoration: none;
    font-weight: 700;
    font-size: 0.9rem;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    margin-top: 0.5rem;
  }

  .read-more:hover { color: var(--link-hover); gap: 0.4rem; }

  .empty-state {
    text-align: center;
    padding: 5rem 2rem;
    background: var(--card);
    border-radius: var(--radius);
    border: 1px solid var(--border);
  }

  .empty-state p { color: var(--muted); font-style: italic; font-size: 1.0625rem; }

  @media (max-width: 768px) {
    .post-preview { padding: 1.75rem 1.25rem; margin-bottom: 1.25rem; }
    .post-title { font-size: 1.375rem; }
    .empty-state { padding: 3.5rem 1.25rem; }
  }

  @media (max-width: 480px) {
    .post-preview { padding: 1.5rem 1rem; }
    .post-title { font-size: 1.3rem; }
  }
</style>