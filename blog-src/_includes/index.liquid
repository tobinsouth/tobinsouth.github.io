---
layout: base.liquid
pagination:
  data: collections.posts
  size: 1000
permalink: "/index.html"
---

<header>
  <h1><a href="/blog/">Tobin's Blog</a></h1>
  <p>{{ site.description }}</p>
  <nav class="back-link">
    <a href="/">← run away</a>
  </nav>
</header>

<main class="blog-main">
  {% if collections.posts.size > 0 %}
    <section class="posts-section">
      {% for post in collections.posts %}
        <article class="post-preview">
          <header class="post-header">
            <h2 class="post-title">
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h2>
            <time class="post-date" datetime="{{ post.date | date: '%Y-%m-%d' }}">
              {{ post.date | date: "%B %d, %Y" }}
            </time>
          </header>
          {% if post.data.description %}
            <p class="post-description">{{ post.data.description }}</p>
          {% endif %}
          <a href="{{ post.url }}" class="read-more">Read more →</a>
        </article>
      {% endfor %}
    </section>
  {% else %}
    <div class="empty-state">
      <p>No posts yet. Check back soon!</p>
    </div>
  {% endif %}
</main>

<footer>
  <p>
    <br>
    <a href="/blog/feed.xml">RSS Feed</a>
    <a href="https://github.com/tobinsouth">GitHub</a>
    <a href="https://x.com/tobinsouth">X</a>
  </p>
</footer>

<style>
  .blog-main {
    padding: 0;
  }
  
  .posts-section {
    margin-top: 0;
  }
  
  .post-preview {
    background: rgba(255, 255, 255, 0.7);
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 2.5rem;
    margin-bottom: 2rem;
    transition: all 0.2s ease;
    backdrop-filter: blur(10px);
  }
  
  .post-preview:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    border-color: #cbd5e1;
  }
  
  .post-preview:last-child {
    margin-bottom: 0;
  }
  
  .post-header {
    margin-bottom: 1rem;
  }
  
  .post-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }
  
  .post-title a {
    color: #1e40af;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .post-title a:hover {
    color: #1d4ed8;
  }
  
  .post-date {
    color: #6b7280;
    font-size: 0.875rem;
    font-weight: 500;
    display: block;
  }
  
  .post-description {
    color: #4b5563;
    line-height: 1.7;
    font-size: 1rem;
    margin: 1.5rem 0;
  }
  
  .read-more {
    color: #2563eb;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    margin-top: 1rem;
    transition: all 0.2s ease;
  }
  
  .read-more:hover {
    color: #1d4ed8;
    gap: 0.5rem;
  }
  
  .empty-state {
    text-align: center;
    padding: 6rem 2rem;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 12px;
    border: 1px solid #e5e7eb;
  }
  
  .empty-state p {
    color: #6b7280;
    font-style: italic;
    font-size: 1.125rem;
  }
  
  @media (max-width: 768px) {
    .post-preview {
      padding: 2rem 1.5rem;
      margin-bottom: 1.5rem;
    }
    
    .post-title {
      font-size: 1.5rem;
    }
    
    .empty-state {
      padding: 4rem 1.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .post-preview {
      padding: 1.5rem 1rem;
    }
    
    .post-title {
      font-size: 1.375rem;
    }
  }
</style>