{
  "private": true,
  "name": "tobins-blog",
  "scripts": {
    "build": "npm run build:site && npm run build:blog",
    "build:site": "mkdir -p _site && cp index.html _site/index.html",
    "build:blog": "npx @11ty/eleventy --input=blog-src --output=_site/blog",
    "dev": "npx @11ty/eleventy --serve --input=blog-src --output=_site/blog",
    "deploy": "npm run build && npx wrangler pages deploy _site --project-name=tobin-fyi"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-plugin-rss": "^2.0.0",
    "wrangler": "^3.0.0"
  }
}